.container
    %br/
    %br/
    %h1.center Search Results
    %table.table.table-responsive.table-hover
        %thead
            %tr
                %th #
                %th Title
                %th Text
                %th{:colspan => "3"}
        - if @articles.empty?
            %h2.center There is no article containing this
        - else
            - @articles.each do |article|  
                %tbody
                    %tr
                        %td= article.id
                        %td= article.title
                        %td
                            = article.text[0..4]
                            \...
                        %td= link_to 'Show', article_path(article), class:"btn btn-info btn-sm"
                        %td= link_to 'Edit', edit_article_path(article), class:"btn btn-warning btn-sm"
                        %td= link_to 'Destroy', article_path(article), class:"btn btn-danger btn-sm", |
                                method: :delete,                                                         |
                                data: { confirm: 'Are you sure?' }
    = link_to 'Back', articles_path, class:"btn btn-secondary btn-sm"

:css 
    .center{
        text-align:center;
    }