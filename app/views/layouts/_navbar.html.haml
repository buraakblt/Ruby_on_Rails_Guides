%nav.navbar.navbar-expand-lg.bg-light
    .container-fluid
        %a.navbar-brand{:href => "https://github.com/buraakblt"} Github
        %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarSupportedContent", "data-bs-toggle" => "collapse", :type => "button"}
            %span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
            %ul.navbar-nav.me-auto.mb-2.mb-lg-0
                %li.nav-item
                    %a.nav-link.active{"aria-current" => "page", :href => welcome_index_path} Home
                %li.nav-item
                    %a.nav-link{:href => articles_path} Articles
                = render 'user/session'
            %form.d-flex{:action => search_path, :role => "search"}
                %input.form-control.me-2{"aria-label" => "Search", :placeholder => "Search Article", :name => "q", :type => "search"}/
                %button.btn.btn-outline-success{:type => "submit"} Search